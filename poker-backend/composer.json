{
    "name": "amara/poker-backend", 
    "description": "A poker backend project",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "cboden/ratchet": "^0.4.4",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "predis/predis": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Game\\": "src/Game/",
            "Database\\": "src/Database/",
            "WebSocket\\": "src/WebSocket/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
